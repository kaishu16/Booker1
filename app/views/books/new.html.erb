<header>
  <h1>Books</h1>
</header>

<main>
  <table>
    <tr>
      <th> Title </th>
      <th> Body </th>
      <th> </th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td> <%= book.title %> </td>
        <td> <%= book.body %> </td>
        <td>
        <%= link_to 'Show', book_path(book), class: "show_#{:id}" %>
        <%= link_to 'Edit', edit_book_path(book), class: "edit_#{:id}" %>
        <%= link_to 'Destroy', destroy_book_path(book), method: :delete, class: "destroy_#{:id}", "data-confirm" => "Are you sure?" %>
        </td>
    </tr>
    <% end %>
  </table>

  <section class='book_new'>
    <h2> New Book </h2>
    <%= form_for(@book) do |f| %>

      <h4> Title </h4>
      <%= f.text_field :title, class:"book_title" %>

      <h4> Body </h4>
      <%= f.text_area :body, class:"book_body" %>

      <div> <%= f.submit 'Create Book' %> </div>

    <% end %>
  </section>
</main>
